extern func main(): int {
  var x: int;
  x = 5;

  var y: int;
  y = 42;

  {
    var x: int;
    x = 1;
    printf("inside first block: x = %d, y = %d\n", x, y);
  }

  {
    var x: int;
    x = 2;
    printf("inside second block: x = %d, y = %d\n", x, y);
  }

  if true {
    var x: int;
    x = 3;
    printf("inside if: x = %d, y = %d\n", x, y);
  }

  while true {
    var x: int;
    x = 4;
    printf("inside while: x = %d, y = %d\n", x, y);
    break;
  }

  printf("outside: x = %d, y = %d\n", x, y);
  return 0;
}
